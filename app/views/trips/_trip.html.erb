<%= link_to trip do %>
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title"><%= trip.title %><%= link_to "Edit", edit_trip_path(trip), class: "button btn-sm btn-warning" %> <%= link_to "Delete", trip_path(trip), method: :delete, class: "button btn-sm btn-danger" %></h3>
    </div>
    <div class="panel-body">
      <p><%= trip.summary %></p>
    </div>
  </div>
<% end %>
